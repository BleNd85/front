$border-radius-element = 0.2rem
$border-radius-image = 0.2rem 0.2rem 0 0
$font-body = ui-sans-serif, -apple-system, BlinkMacSystemFont, "Segoe UI Variable Display", "Segoe UI", Helvetica, "Apple Color Emoji", Arial, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol"
$box-shadow-element = 0 0 0.3rem 0.1rem rgba(0, 0, 0, 0.2)
$box-shadow-element-active = 0 0 0.4rem 0.2rem rgba(0, 0, 0, 0.2)

box-shadow-element()
  box-shadow $box-shadow-element

box-shadow-active()
  box-shadow $box-shadow-element-active

border-radius-element()
  border-radius $border-radius-element

border-radius-image()
  border-radius $border-radius-image

font-family()
  font-family $font-body

*
  font-family()
  padding 0
  margin 0
  box-sizing border-box
  font-weight 400

p
  font-size 18px

body
  background #f8edeb

table
  max-width 1920px
  width 100%
  border-collapse separate
  border-spacing 2rem 1rem
  margin 0 auto
  box-shadow 0 8px 16px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)

td
  vertical-align top

ul
  list-style-type none
  padding 0

li
  margin 1rem 1rem

a
  text-decoration none
  color black
  font-size 20px

.logo-img
  border-radius-element()
  shadow-element()
  width 100px
  height 75px
  margin 0.3rem 0 0.1rem 0.5rem

.section
  width 10%
  text-align center
  padding 1rem

.sidebar-left
  width 20%

.main-content
  width 60%

.trends
  width 20%

.input
  shadow-element()
  border none
  width 50%
  height 3rem
  padding 0.5rem

  &:focus
    shadow-active()
    outline none

.input-cell
  text-align right
  align-content center
  padding-right 2rem


.section-right
  padding 5rem

.t-rounded
  border-radius-element()
  shadow-element()

.image
  border-radius-image()
  max-width 100%
  max-height 50%

.content
  padding 0.3rem
  margin 0.7rem

@media (max-width: 980px)
  table
    border-spacing 0.5rem

  a
    font-size 15px
    font-weight bold

  li
    margin 2rem 0

  .content
    padding 1rem
    margin 0

    ul
      padding 0
