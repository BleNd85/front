$border-radius-element = 0.2rem
$border-radius-image = 0.2rem 0.2rem 0 0
$shadow-light = 0 0 0.3rem 0.1rem rgba(0, 0, 0, 0.2)
$shadow-active = 0 0 0.4rem 0.2rem rgba(0, 0, 0, 0.2)
$shadow-strong = 0 8px 16px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)

border-radius-element()
  border-radius $border-radius-element

border-radius-image()
  border-radius $border-radius-image

shadow-element(shadow)
  box-shadow shadow

shadow-active(shadow)
  box-shadow shadow

flex(direction)
  display: flex
  flex-direction direction

*
  margin 0
  padding 0
  box-sizing border-box
  font-family ui-sans-serif, -apple-system, BlinkMacSystemFont, "Segoe UI Variable Display", "Segoe UI", Helvetica, "Apple Color Emoji", Arial, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol"
  font-weight 400

body
  max-width 1920px
  margin 0 auto
  shadow-element($shadow-strong)

a
  text-decoration none
  color black
  font-size 18px

ul
  list-style-type none

li
  margin 1rem

.container
  flex(row)
  padding 1rem
  column-gap 3rem
  justify-content space-between


.logo-img
  border-radius-element()
  shadow-element($shadow-light)
  width 100px
  height 75px
  margin 0.5rem 0

.header
  shadow-element($shadow-light)
  flex(row)
  justify-content space-evenly
  align-items center
  overflow auto
  column-gap 5rem

.input
  shadow-element($shadow-light)
  border-radius-element()
  border none
  width 69%
  height 3rem
  padding 0.5rem
  background #E4E0E1

  &:focus
    shadow-element($shadow-active)
    outline none

.button-header
  border-radius-element()
  shadow-element($shadow-light)
  height 3rem
  width 6rem
  border none
  background #E4E0E1

  &:hover
    cursor pointer
    shadow-element($shadow-active)

.sidebar-left
  border-radius-element()
  shadow-element($shadow-light)
  background #E4E0E1
  padding 1rem
  width 20%

.gallery
  flex(row)
  flex-wrap wrap
  row-gap 2rem
  column-gap 2rem
  width 100%

.gallery-item
  border-radius-element()
  shadow-element($shadow-light)
  flex(column)
  background #E4E0E1
  width 23%

.gallery-item-h3
  font-size 18px

.gallery-item-p
  font-size 16px

.gallery-item-img
  border-radius-image()
  width 100%
  height auto

.gallery-item-text
  color #333
  flex-wrap wrap

  h3
    font-weight 600

.gallery-item-body
  flex(row)
  align-content space-between
  padding 1rem
  column-gap 1rem
  align-items center

.button-body
  border-radius-element()
  shadow-element($shadow-light)
  border none
  height 3rem
  width 100%

  &:hover
    cursor pointer
    shadow-element($shadow-active)

.sidebar-text
  padding 0.3rem
  margin 0.7rem

@media (max-width: 1525px)
  .gallery-item
    width 31%

  .header
    column-gap 0

@media (max-width: 1200px)
  .gallery
    column-gap 1.5rem
    row-gap 1.5rem

  .gallery-item
    width 46%

@media (max-width: 900px)
  .gallery
    row-gap 1rem

  .gallery-item
    width 95%

  .input
    width 50%

  .container
    column-gap 1rem
    padding 1rem 0.5rem 0 1rem

  .sidebar-left
    width 30%
    padding 1rem 0

  .input
    width 30%

  li
    margin 0.5rem
